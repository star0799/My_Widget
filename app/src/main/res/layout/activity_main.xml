<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity

    ">

    <ImageButton
        android:src="@drawable/a"

        android:maxHeight="40dp"
        android:minWidth="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibRotation"
        android:layout_alignTop="@+id/ibWifi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
android:src="@drawable/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibBluetooth"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/g"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibGPS"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/l"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibLock"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/ibShock"
        android:layout_alignStart="@+id/ibShock" />

    <ImageButton
android:src="@drawable/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_above="@+id/ibBluetooth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/h"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibHotspot"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/la"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibLED"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ibShock"
        android:layout_alignStart="@+id/ibShock" />

    <ImageButton
        android:src="@drawable/s"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibShock"
        android:layout_alignTop="@+id/ibWifi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/w"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibWifi"
        android:layout_above="@+id/ibLock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />




</RelativeLayout>
